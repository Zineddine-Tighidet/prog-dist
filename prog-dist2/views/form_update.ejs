          if(dico.length != 0){
              for(var i = 0; i < dico.length; i++) { %>
            <form action="form_update" method="POST" style="color : white;">
                <div class="form-group">
                  <label for="exampleInputEmail1">Nom de la planète</label>
                  <input type="text" class="form-control" id="name" value="<%= dico[i].name %>" name="name" placeholder="Le nom ne peut etre modifié." readonly>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Masse</label>
                    <input type="text" class="form-control" id="masse" value="<%= dico[i].mass %>" name = "masse">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Gravité</label>
                    <input type="text" class="form-control" id="gravite" name="gravite" value="<%= dico[i].gravity %>">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Longueur de la journée</label>
                    <input type="text" class="form-control" id="long" name="long" value="<%= dico[i].length_of_day %>">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Distance du soleil</label>
                    <input type="text" class="form-control" id="dist" name="dist" value="<%= dico[i].distance_from_sun %>">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Déscription</label>
                    <input class="form-control" id="desc" name="desc" value="<%= dico[i].descr %>">                     
                </div>
                <button type="submit" class="btn btn-lg btn-primary">Modifier</button>
              </form>
              <% } %>
              <% } %>
