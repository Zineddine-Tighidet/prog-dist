            <table class="table table-hover" style="background-color: rgba(245, 245, 245, 0.726); box-shadow: 1px 1px 10px whitesmoke; margin-top: 3%;">
                <thead>
                  <tr>
                    <th scope="col">Informations planète</th>
                    <th scope="col">Illustration</th>
                    <th scope="col">Détails</th>
                  </tr>
                </thead>
                <tbody>
                <% for(var i = 0; i < dico.length; i++) { %>
                  <tr style="">
                    <td style="">
                        <ul style="list-style-type: none;">
                            <li><b>Nom :</b> <%= dico[i].name %></li>
                            <li><b>Masse :</b> <%= dico[i].mass %> × 10^24 kg</li>
                            <li><b>Gravité :</b> <%= dico[i].gravity %> g</li>
                            <li><b>Longueur de la journée :</b> <%= dico[i].length_of_day %> heures</li>
                            <li><b>Distance du soleil :</b> <%= dico[i].distance_from_sun %> x 10^6 km</li>
                        </ul>
                    </td>
                    <td>
                      <img src="http://<%= ip %>:30300/<%= dico[i].name %>.jpg" width="230" height="200" class = "img img-responsive" alt="">
                    </td>
                    <td>
                      <form action="/form_update" method="GET">
                        <input type="hidden" id="planet_name" name="planet_name" value="<%= dico[i].name %>">
                        <button type="submit" class="btn btn-primary">Modifier</button>
                      </form>
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
